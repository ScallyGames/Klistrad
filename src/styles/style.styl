charWidth(x)
    x * (80 / 133.3) * 1em

charHeight(x)
    x * 1em

html, body
    margin: 0
    padding: 0
    box-sizing: border-box
    overflow: hidden
    font-family: FreeMono
    font-weight: normal

*
    margin: 0
    padding: 0

#size-template
    width: charWidth(1)
    height: charHeight(1)

#title
    position: absolute
    left: 50%
    top: 16px
    font-size: 1.6em
    transform: translateX(-50%)

#notifications, #gameover-notification
    position: absolute
    left: 50%
    top: 72px
    width: 620px
    height: 96px
    transform: translateX(-50%)
    display: flex
    justify-content: center
    align-items: center
    text-align: center

#gameover-notification
    display: none
    top: 50%
    background-color: white
    z-index: 10
    border: 3px double red

#gameover-notification.active
    display: flex

#score
    position: absolute
    left: 80%
    top: 72px
    width: 200px
    display: flex 
    align-items: center
    height: 96px
    padding-left: 16px
    font-size: 1.4em

    pre
        font-weight: bold
    

#settings
    position: absolute
    bottom: 17%
    left: 16px

    label
        margin-right: 8px

#credits
    position: absolute
    bottom: 16px
    left: 16px

#game
    position: absolute
    left: 18%
    top: 10%
    width: 80%
    height: 80%
    overflow: hidden
    line-height: 1em
    font-size: 1.1em
    user-select: none

#instructions
    position: absolute
    left: 0
    top: 15%
    width: 20%
    height: 60%
    padding: 16px
    line-height: 1em

    ul
        list-style-type: none

        li
            margin-top: 16px

.layered
    position: absolute

.background
    left: 0
    top: 0

.bold
    font-weight: bold

.strong
    -webkit-text-stroke: 1px black

.stronger
    -webkit-text-stroke: 2px black

