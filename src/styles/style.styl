charWidth(x)
    x * (80 / 133.3) * 1em

charHeight(x)
    x * 1em

html, body
    margin: 0
    padding: 0
    box-sizing: border-box
    overflow: hidden
    font-family: FreeMono
    font-weight: normal

*
    margin: 0
    padding: 0

#size-template
    width: charWidth(1)
    height: charHeight(1)

#settings
    margin: 8px

    label
        margin-right: 8px

#game
    position: absolute
    left: 10%
    top: 10%
    width: 80%
    height: 80%
    overflow: hidden
    line-height: 1em
    font-size: 1.1em
    //user-select: none

.layered
    position: absolute

.background
    left: 0
    top: 0

.bold
    font-weight: bold

.strong
    -webkit-text-stroke: 1px black

.stronger
    -webkit-text-stroke: 2px black

.factory
    left: charWidth(8)
    top: charHeight(4)

.wall
    color: red

.vat, .vat *
    position: absolute

.vat-content
    color: green

.game-object
    position: absolute

pre
    font-family: FreeMono
    font-weight: normal