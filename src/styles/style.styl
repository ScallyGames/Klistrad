//     top: charHeight(4)

.wall
    color: red

.crane
    color: orange
    z-index: 1
    
.crane-truss
    z-index: 2

.crane
    .cargo
        z-index: -1

.centrifuge
    .fuel
        z-index: 1
        -webkit-text-stroke: 1px

.water
    color: blue


.fuel
    color: #336e04

.spin1
    .fuel
        color: #428a08

.spin2
    .fuel
        color: #54a611

.spin3
    .fuel
        color: #6ce00d

.fuel-enriched
    color: #6ce00d

.hidden
    display: none

.switchable
    .conveyor
        color: #ab1fab
        -webkit-text-stroke: 1px #ab1fab

.conveyor-belt
    color: #555555

.spillage
    pre
        color: blue

.label
    position: absolute
    border: 1px solid black
    width: 1em
    height: 1em
    text-align: center
    transform: translateX(-50%)
    background-color: white

.vat, .vat *
    position: absolute

.game-object
    position: absolute

pre
    font-family: FreeMono
    font-weight: normal
